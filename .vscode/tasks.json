{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Execute TypeScript with ts-node",
        "type": "shell",
        "command": "npx ts-node ${file}",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Build Typescript File",
        "type": "shell",
        "command": "cd ${fileDirname} && npx tsc ${file}",
        "group": {
          "kind": "build",
          "isDefault": true
        },
      }
    ]
  }